<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sayli.fortifiedcards">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CScan"
            android:label="Scan the QR Code of your card" />
        <activity
            android:name=".EnterAmount"
            android:label="Enter the due amount" />
        <activity
            android:name=".VScan"
            android:label="Scan the vendor&apos;s QR Code" />
        <activity android:name=".Intro1" />
        <activity android:name=".Intro2" />
        <activity android:name=".Intro3" />
        <activity android:name=".Intro4"></activity>
    </application>

</manifest>